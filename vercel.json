{
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/reset-usage",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/sync-sponsors",
      "schedule": "0 * * * *"
    }
  ],
  "functions": {
    "api/generate-draft": {
      "maxDuration": 30
    },
    "api/generate-final": {
      "maxDuration": 30
    }
  }
}
